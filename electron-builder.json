{
    "appId": "org.hmrbh.omcl",
    "directories": {
        "output": "dist"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "shortcutName": "OMCL",
        "installerIcon": "build/icons/icons/icon.ico",
        "uninstallerIcon": "build/icons/icons/icon.ico",
        "installerHeaderIcon": "build/icons/icons/icon.ico"
    },
    "win": {
        "target": "nsis",
        "icon": "build/icons/icons/icon.ico"
    },
    "linux": {
        "target": ["snap", "AppImage"],
        "icon": "build/icons/icons"
    },
    "mac": {
        "target": "dmg",
        "icon": "build/icons/icons/icon.icns"
    },
    "files": [
        {
            "from": "build/main",
            "to": "main",
            "filter": ["**/*"]
        },
        {
            "from": "build/renderer",
            "to": "renderer",
            "filter": ["**/*"]
        },
        {
            "from": "src/main/static",
            "to": "static",
            "filter": ["**/*"]
        },
        "!build",
        "!dist",
        "!scripts"
    ]
}